<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/bg5">


    <EditText
        android:id="@+id/activity2_userName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50sp"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="right"
        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/activity2_userAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity2_userName"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="right"
        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:paddingRight="35sp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold|italic" />


    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        tools:context=".MenuActivity">

        <Button
            android:id="@+id/btnMenuTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_background"
            android:text="Watch Tutorial"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_2x2_game"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/alert_dark_frame"
            android:text="@string/menu_option_2x2_game"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_4x4_game"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/alert_dark_frame"
            android:text="@string/menu_option_4x4_game"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_6x6_game"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/alert_dark_frame"
            android:text="@string/menu_option_6x6_game"
            android:textColor="#ffffff" />


    </LinearLayout>

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:textAlignment="center" />

</RelativeLayout>